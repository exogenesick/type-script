{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false
    },
    "compileOnSave": false,
    "filesGlob": [
        "gulpfile.ts",
        "typings/*.d.ts",
        "typings/tsd.d.ts",
        "!dist/**",
        "!test/**",
        "!.tmp/**",
        "!node_modules/**"
    ],
    "files": [
        "gulpfile.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
