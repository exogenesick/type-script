{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "outDir": "dist/",
        "rootDir": "src/"
    },
    "filesGlob": [
        "./typings/tsd.d.ts",
        "./typings/**/*.ts",
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    },
    "files": [
        "./typings/tsd.d.ts",
        "./typings/assertion-error/assertion-error.d.ts",
        "./typings/chai/chai.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/sinon/sinon.d.ts",
        "./typings/underscore/underscore.d.ts",
        "./typings/uuid/UUID.d.ts",
        "./src/app/boot.ts",
        "./src/app/models/User.ts",
        "./src/app/repository/Repository.ts",
        "./src/app/repository/UsersRepository.ts",
        "./src/test/unit/UsersRepositoryTest.ts"
    ]
}
