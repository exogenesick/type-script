{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "outDir": "dist/"
    },
    "filesGlob": [
        "./typings/tsd.d.ts",
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "./typings/tsd.d.ts",
        "./src/boot.ts",
        "./src/components/main.ts",
        "./src/models/user.ts",
        "./src/repository/repository.ts",
        "./src/repository/usersRepository.spec.ts",
        "./src/repository/usersRepository.ts",
        "./src/services/guid.ts"
    ]
}
